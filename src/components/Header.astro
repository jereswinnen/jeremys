---
const navItems = [
  { path: "/notes", label: "Notes" },
  { path: "/profile", label: "Profile" },
];

// Get current path to highlight active link
const currentPath = Astro.url.pathname;

const { class: className, ...rest } = Astro.props;
---

<header class={className} {...rest}>
  <nav class="flex items-center gap-6">
    <a href="/" class="hover:opacity-80 transition-opacity">
      <img src="/branding.svg" alt="Jeremy Swinnen" class="h-7 w-auto" />
    </a>
    <div class="flex flex-col">
      <p class="font-medium">Jeremy Swinnen</p>
      <p class="opacity-70">UX/UI Designer &amp; Creative Developer</p>
    </div>
    <ul class="flex gap-6">
      {
        navItems.map(({ path, label }) => (
          <li>
            <a
              href={path}
              class:list={[
                "hover:text-blue-600 transition-colors",
                currentPath === path && "text-blue-600 font-medium",
              ]}
            >
              {label}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
