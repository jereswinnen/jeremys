---
import ImageShader from "./ImageShader";
import ReverseImageShader from "./ReverseImageShader";

interface Props {
  constrain?: boolean;
  sources: {
    srcset: string;
    type: string;
  }[];
  fallbackSrc: string;
  alt: string;
}

const { constrain = false, sources, fallbackSrc, alt } = Astro.props;

const containerClasses = constrain ? "max-w-[18vw] bg-orange-200" : "";
---

<ReverseImageShader
  client:load
  sources={sources}
  fallbackSrc={fallbackSrc}
  alt={alt}
/>
