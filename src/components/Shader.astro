---
import ImageShader from "./ImageShader";

interface Props {
  constrain?: boolean;
  sources: {
    srcset: string;
    type: string;
  }[];
  fallbackSrc: string;
  alt: string;
}

const { constrain = false, sources, fallbackSrc, alt } = Astro.props;

const containerClasses = constrain ? "max-h-[45vh] md:max-h-[35vh]" : "";
---

<ImageShader
  client:load
  sources={sources}
  fallbackSrc={fallbackSrc}
  alt={alt}
/>
