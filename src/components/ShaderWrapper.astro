---
import ImageShader from "./ImageShader";
import ReverseImageShader from "./ReverseImageShader";

interface Props {
  hover?: boolean;
  sources: {
    srcset: string;
    type: string;
  }[];
  fallbackSrc: string;
  alt: string;
}

const { hover = true, sources, fallbackSrc, alt } = Astro.props;
---

<ReverseImageShader
  client:load
  hover={hover}
  sources={sources}
  fallbackSrc={fallbackSrc}
  alt={alt}
/>
