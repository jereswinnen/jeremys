---
import type { CollectionEntry } from "astro:content";

interface Props {
  entry: CollectionEntry<"notes">;
  datetime: string;
  time: string;
  Content: any;
}

const { entry, datetime, time, Content } = Astro.props;
---

<>
  <section class="bg-indigo-100 flex items-baseline gap-4">
    <time datetime={datetime} class="text-sm opacity-70">
      {time}
    </time>
  </section>
  {
    Content && (
      <section class="bg-green-100 flex flex-col">
        <header>
          <a
            href={`/blog/notes/${entry.slug}`}
            class="text-lg font-medium hover:text-brandOrange"
          >
            {entry.data.title}
          </a>
        </header>
        <Content />
      </section>
    )
  }
</>
