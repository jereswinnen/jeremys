---
import "../assets/styles/globals.css";
import Header from "../components/Header.astro";
import Nav from "../components/Nav.astro";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} | My Website` : "My Website"}</title>
    {description && <meta name="description" content={description} />}
  </head>
  <body
    class="o-container font-sans pt-8 dark:bg-slate-950 text-slate-950 dark:text-white/85"
  >
    <div class="o-grid">
      <Header class="col-span-full" />
      <Nav class="col-span-full" />

      <main class="o-grid-inner">
        <slot />
      </main>

      <footer class="col-span-full text-sm opacity-70">
        <p>&copy; {new Date().getFullYear()} Your Name</p>
      </footer>
    </div>
  </body>
</html>
