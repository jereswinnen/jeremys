---
import MasterLayout from "../layouts/MasterLayout.astro";
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import { getProjectImagePath } from "../utils/projectUtils";

interface Props {
  project: CollectionEntry<"work">;
}

const { project } = Astro.props;
const {
  name,
  tagline,
  description,
  heroImage,
  themeColor,
  role,
  artwork,
  details,
  externalLink,
} = project.data;
---

<MasterLayout title={name}>
  <article class="max-w-6xl mx-auto py-12 px-4">
    <!-- Hero Section -->
    <header class="mb-16">
      <Image
        src={getProjectImagePath(name, heroImage)}
        alt={name}
        width={1200}
        height={800}
        class="w-full h-[70vh] object-cover rounded-lg mb-8"
      />
      <div class="max-w-3xl">
        <h1 class="text-4xl font-bold mb-4">{name}</h1>
        <p class="text-2xl text-gray-600 mb-6">{tagline}</p>
        <div class="flex gap-3 mb-8">
          {
            role.map((r: any) => (
              <span
                class="px-3 py-1 rounded-full text-sm"
                style={`background-color: ${themeColor}20; color: ${themeColor}`}
              >
                {r.tag}
              </span>
            ))
          }
        </div>
        {
          externalLink && (
            <a
              href={externalLink}
              class="inline-flex items-center text-lg font-medium transition-colors"
              style={`color: ${themeColor}`}
            >
              Visit Project â†’
            </a>
          )
        }
      </div>
    </header>

    <!-- Main Content -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-16">
      <div class="md:col-span-2">
        <p class="text-lg text-gray-700 whitespace-pre-line">{description}</p>
      </div>
      {
        details && (
          <div class="space-y-8">
            {details.map((detail: any) => (
              <div>
                <h3 class="font-medium mb-2">{detail.title}</h3>
                <p class="text-gray-700">{detail.content}</p>
              </div>
            ))}
          </div>
        )
      }
    </div>

    <!-- Project Images -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        artwork.map((art: any) => (
          <figure>
            <Image
              src={getProjectImagePath(name, art.src)}
              alt={art.caption || name}
              width={800}
              height={600}
              class="w-full rounded-lg"
            />
            {art.caption && (
              <figcaption class="mt-2 text-sm text-gray-600">
                {art.caption}
              </figcaption>
            )}
          </figure>
        ))
      }
    </div>
  </article>
</MasterLayout>
